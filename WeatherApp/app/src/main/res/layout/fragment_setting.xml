<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp">
    <View
        android:id="@+id/v_banner"
        android:layout_width="410dp"
        android:layout_height="169dp"
        android:background="@drawable/bg_banner_setting"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/v_banner"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Setting"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_image_user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="60dp"
        app:layout_constraintTop_toBottomOf="@id/tv_setting"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp">

        <ImageView
            android:id="@+id/iv_image_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_default"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_username_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_setting"
        app:layout_constraintLeft_toRightOf="@id/cv_image_user"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:text="@string/name_banner"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_username_setting"
        app:layout_constraintLeft_toRightOf="@id/cv_image_user"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/email_banner"/>
    <TextView
        android:id="@+id/tv_personal_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/information"
        />
    <ImageView
        android:id="@+id/iv_person1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_personal_information"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/ic_person1"/>
    <TextView
        android:id="@+id/tv_fulname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_personal_information"
        app:layout_constraintLeft_toRightOf="@id/iv_person1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/full_name"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_fulname"
        app:layout_constraintLeft_toRightOf="@id/iv_person1"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#002761"
        android:text="@string/edit_full_name"/>
    <ImageView
        android:id="@+id/iv_email"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_personal_information"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/ic_mail"/>
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_personal_information"
        app:layout_constraintLeft_toRightOf="@id/iv_person1"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="10dp"
        android:text="@string/email_address"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_fulname"
        app:layout_constraintLeft_toRightOf="@id/iv_person1"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#002761"
        android:text="@string/edit_email_address"/>
    <ImageView
        android:id="@+id/iv_username"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_personal_information"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/ic_username"/>
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_personal_information"
        app:layout_constraintLeft_toRightOf="@id/iv_person1"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:text="@string/user_name"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_fulname"
        app:layout_constraintLeft_toRightOf="@id/iv_person1"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#002761"
        android:text="@string/edit_user_name"/>
    <ImageView
        android:id="@+id/iv_password"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_personal_information"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/ic_lock"/>
    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_personal_information"
        app:layout_constraintLeft_toRightOf="@id/iv_person1"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="10dp"
        android:text="@string/pass_word"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_fulname"
        app:layout_constraintLeft_toRightOf="@id/iv_person1"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#002761"
        android:text="@string/edit_pass_word"/>
    <ImageView
        android:id="@+id/bt_edit_password"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@id/iv_password"
        app:layout_constraintTop_toBottomOf="@id/tv_personal_information"
        android:layout_marginTop="160dp"
        android:layout_marginStart="280dp"
        android:background="@drawable/ic_edit"/>
    <ImageView
        android:id="@+id/iv_language"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_personal_information"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="195dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/ic_language"/>
    <TextView
        android:id="@+id/tv_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_personal_information"
        app:layout_constraintLeft_toRightOf="@id/iv_person1"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="10dp"
        android:text="@string/language"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_fulname"
        app:layout_constraintLeft_toRightOf="@id/iv_person1"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#002761"
        android:text="@string/edit_language"/>
    <ImageView
        android:id="@+id/bt_edit_language"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@id/iv_language"
        app:layout_constraintTop_toBottomOf="@id/tv_personal_information"
        android:layout_marginTop="205dp"
        android:layout_marginStart="280dp"
        android:background="@drawable/ic_edit"/>
    <Button
        android:id="@+id/bt_logout"
        android:layout_width="200dp"
        android:layout_height="46dp"
        app:layout_constraintTop_toBottomOf="@id/tv_personal_information"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="400dp"
        android:background="@drawable/bg_button_login"
        android:text="@string/logout"
        android:textStyle="bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>