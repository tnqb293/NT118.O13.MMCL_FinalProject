<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_image_user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/iv_image_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_default"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_hello_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cv_image_user"
        app:layout_constraintTop_toTopOf="@id/cv_image_user"
        app:layout_constraintBottom_toBottomOf="@id/cv_image_user"
        android:layout_marginStart="10dp"
        android:text="@string/username_default"
        android:textColor="@color/maybe_black"
        android:textStyle="bold"
        android:textSize="20sp"
        />
    <View
        android:id="@+id/v_item_temperature"
        android:layout_width="170dp"
        android:layout_height="77dp"
        app:layout_constraintTop_toBottomOf="@id/cv_image_user"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_input_text"
        />
    <ImageView
        android:id="@+id/iv_image_sunny"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/v_item_temperature"
        app:layout_constraintBottom_toBottomOf="@id/v_item_temperature"
        app:layout_constraintLeft_toLeftOf="@id/v_item_temperature"
        android:layout_marginStart="14dp"
        android:src="@drawable/ic_temperature"
        />
    <TextView
        android:id="@+id/tv_status_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/v_item_temperature"
        app:layout_constraintStart_toEndOf="@id/iv_image_sunny"
        app:layout_constraintEnd_toEndOf="@id/v_item_temperature"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/maybe_black"
        android:text="@string/weather_default"
        />
    <TextView
        android:id="@+id/tv_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_status_weather"
        app:layout_constraintStart_toEndOf="@id/iv_image_sunny"
        app:layout_constraintEnd_toEndOf="@id/v_item_temperature"
        android:text="@string/temperature_default"
        android:textSize="18sp"
        android:textColor="@color/maybe_black"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/v_item_dayOfWeek"
        android:layout_width="170dp"
        android:layout_height="77dp"
        app:layout_constraintTop_toBottomOf="@id/cv_image_user"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_input_text"
        />
    <ImageView
        android:id="@+id/iv_image_calendar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/v_item_dayOfWeek"
        app:layout_constraintBottom_toBottomOf="@id/v_item_dayOfWeek"
        app:layout_constraintLeft_toLeftOf="@id/v_item_dayOfWeek"
        android:layout_marginStart="14dp"
        android:src="@drawable/ic_calendar"
        />
    <TextView
        android:id="@+id/tv_dayOfWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/v_item_dayOfWeek"
        app:layout_constraintStart_toEndOf="@id/iv_image_calendar"
        app:layout_constraintEnd_toEndOf="@id/v_item_dayOfWeek"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/maybe_black"
        android:text="@string/day_of_week_default"
        />
    <TextView
        android:id="@+id/tv_month_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_dayOfWeek"
        app:layout_constraintStart_toEndOf="@id/iv_image_calendar"
        app:layout_constraintEnd_toEndOf="@id/v_item_dayOfWeek"
        android:text="@string/month_year_default"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/maybe_black"
        />
    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v_item_temperature"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:text="@string/location_title"
        android:textSize="24sp"
        android:textColor="@color/maybe_black"
        />
    <View
        android:id="@+id/v_item_location"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:layout_constraintTop_toBottomOf="@id/tv_location"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_input_text"
        />
    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/v_item_location"
        app:layout_constraintBottom_toBottomOf="@id/v_item_location"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_location"
        />
    <TextView
        android:id="@+id/tv_location_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_location"
        app:layout_constraintTop_toTopOf="@id/v_item_location"
        app:layout_constraintBottom_toBottomOf="@id/v_item_location"
        android:layout_marginStart="20dp"
        android:text="@string/location_user_default"
        android:textSize="20sp"
        android:textColor="@color/maybe_black"
        />
    <TextView
        android:id="@+id/tv_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v_item_location"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:text="@string/weather_title"
        android:textColor="@color/maybe_black"
        android:textSize="24sp"
        />
    <View
        android:id="@+id/v_item_sunrise"
        android:layout_width="170dp"
        android:layout_height="77dp"
        app:layout_constraintTop_toBottomOf="@id/tv_weather"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_input_text"
        />
    <ImageView
        android:id="@+id/iv_image_sunrise"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/v_item_sunrise"
        app:layout_constraintBottom_toBottomOf="@id/v_item_sunrise"
        app:layout_constraintLeft_toLeftOf="@id/v_item_sunrise"
        android:layout_marginStart="14dp"
        android:src="@drawable/ic_sunrise"
        />
    <TextView
        android:id="@+id/tv_sunrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/v_item_sunrise"
        app:layout_constraintStart_toEndOf="@id/iv_image_sunrise"
        app:layout_constraintEnd_toEndOf="@id/v_item_sunrise"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/maybe_black"
        android:text="@string/sunrise_title"
        />
    <TextView
        android:id="@+id/tv_time_sunrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_sunrise"
        app:layout_constraintStart_toEndOf="@id/iv_image_sunrise"
        app:layout_constraintEnd_toEndOf="@id/v_item_sunrise"
        android:text="@string/sunrise_time_default"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/maybe_black"
        />
    <View
        android:id="@+id/v_item_sunset"
        android:layout_width="170dp"
        android:layout_height="77dp"
        app:layout_constraintTop_toBottomOf="@id/tv_weather"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_input_text"
        />
    <ImageView
        android:id="@+id/iv_image_sunset"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/v_item_sunset"
        app:layout_constraintBottom_toBottomOf="@id/v_item_sunset"
        app:layout_constraintLeft_toLeftOf="@id/v_item_sunset"
        android:layout_marginStart="14dp"
        android:src="@drawable/ic_sunset"
        />
    <TextView
        android:id="@+id/tv_sunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/v_item_sunset"
        app:layout_constraintStart_toEndOf="@id/iv_image_sunset"
        app:layout_constraintEnd_toEndOf="@id/v_item_sunset"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/maybe_black"
        android:text="@string/sunset_title"
        />
    <TextView
        android:id="@+id/tv_time_sunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_sunset"
        app:layout_constraintStart_toEndOf="@id/iv_image_sunset"
        app:layout_constraintEnd_toEndOf="@id/v_item_sunset"
        android:text="@string/sunset_time_default"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/maybe_black"
        />
    <View
        android:id="@+id/v_item_rainfall"
        android:layout_width="170dp"
        android:layout_height="77dp"
        app:layout_constraintTop_toBottomOf="@id/v_item_sunset"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_input_text"
        />
    <ImageView
        android:id="@+id/iv_image_rainfall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/v_item_rainfall"
        app:layout_constraintBottom_toBottomOf="@id/v_item_rainfall"
        app:layout_constraintLeft_toLeftOf="@id/v_item_rainfall"
        android:layout_marginStart="14dp"
        android:src="@drawable/ic_rainfall"
        />
    <TextView
        android:id="@+id/tv_rainfall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/v_item_rainfall"
        app:layout_constraintStart_toEndOf="@id/iv_image_rainfall"
        app:layout_constraintEnd_toEndOf="@id/v_item_rainfall"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/maybe_black"
        android:text="@string/rainfall_title"
        />
    <TextView
        android:id="@+id/tv_value_rainfall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_rainfall"
        app:layout_constraintStart_toEndOf="@id/iv_image_rainfall"
        app:layout_constraintEnd_toEndOf="@id/v_item_rainfall"
        android:text="@string/rain_fail_value_default"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/maybe_black"
        />

    <View
        android:id="@+id/v_item_wind_speed"
        android:layout_width="170dp"
        android:layout_height="77dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_input_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_item_sunrise" />
    <ImageView
        android:id="@+id/iv_image_windspeed"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/v_item_wind_speed"
        app:layout_constraintBottom_toBottomOf="@id/v_item_wind_speed"
        app:layout_constraintLeft_toLeftOf="@id/v_item_wind_speed"
        android:layout_marginStart="14dp"
        android:src="@drawable/ic_windspeed"
        />

    <TextView
        android:id="@+id/tv_windspeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:text="@string/wind_speed_title"
        android:textColor="@color/maybe_black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/v_item_wind_speed"
        app:layout_constraintStart_toEndOf="@id/iv_image_windspeed"
        app:layout_constraintTop_toTopOf="@+id/v_item_wind_speed" />
    <TextView
        android:id="@+id/tv_value_windspeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_windspeed"
        app:layout_constraintStart_toEndOf="@id/iv_image_windspeed"
        app:layout_constraintEnd_toEndOf="@id/v_item_wind_speed"
        android:text="@string/wind_speed_value_default"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/maybe_black"
        />
    <View
        android:id="@+id/v_item_humidity"
        android:layout_width="170dp"
        android:layout_height="77dp"
        app:layout_constraintTop_toBottomOf="@id/v_item_rainfall"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_input_text"
        />
    <ImageView
        android:id="@+id/iv_image_humidity"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/v_item_humidity"
        app:layout_constraintBottom_toBottomOf="@id/v_item_humidity"
        app:layout_constraintLeft_toLeftOf="@id/v_item_humidity"
        android:layout_marginStart="14dp"
        android:src="@drawable/ic_humidity"
        />
    <TextView
        android:id="@+id/tv_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/v_item_humidity"
        app:layout_constraintStart_toEndOf="@id/iv_image_humidity"
        app:layout_constraintEnd_toEndOf="@id/v_item_humidity"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/maybe_black"
        android:text="@string/humidity_title"
        />
    <TextView
        android:id="@+id/tv_value_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_humidity"
        app:layout_constraintStart_toEndOf="@id/iv_image_humidity"
        app:layout_constraintEnd_toEndOf="@id/v_item_humidity"
        android:text="@string/humidity_value_default"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/maybe_black"
        />
</androidx.constraintlayout.widget.ConstraintLayout>