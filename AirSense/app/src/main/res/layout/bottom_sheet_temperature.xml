<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">
    <ImageView
        android:id="@+id/ivIconWeather"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_weather"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="160dp"
        />
    <TextView
        android:id="@+id/tvDefaultWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/ivIconWeather"
        app:layout_constraintTop_toTopOf="@id/ivIconWeather"
        app:layout_constraintBottom_toBottomOf="@id/ivIconWeather"
        android:text="@string/default_weather"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/tvHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivIconWeather"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:text="@string/humidity_default_weather"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/tvValueHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivIconWeather"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="@string/humidity_value_default_weather"
        android:textSize="20sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>