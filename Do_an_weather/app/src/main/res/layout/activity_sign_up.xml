<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/icon_air"
            android:layout_marginRight="10dp"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:background="@drawable/square_border_radius">
            <View
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:background="@drawable/icon_air"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/icon_air"
            android:text="AirSense - UIT"
            android:layout_centerInParent="true"
            android:textSize="26dp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/TVSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="32dp"
        android:text="SIGN UP"
        android:textStyle="bold"
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/TVDescription"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVSignUp"
        android:text="Looks like you don’t have an account. Let’s create a new account for you."
        />

    <EditText
        android:id="@+id/ETName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVDescription"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectangle_inputtext"
        android:hint="Name"
        />
    <EditText
        android:id="@+id/ETEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ETName"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle_inputtext"
        android:hint="Email"
        />
    <EditText
        android:inputType="textPassword"
        android:id="@+id/ETPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ETEmail"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle_inputtext"
        android:hint="Password"
        />
    <TextView
        android:id="@+id/TVPolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ETPassword"
        android:layout_marginTop="24dp"
        android:textSize="14sp"
        android:text="By selecting Create Account below, I agree to Terms of Service  Privacy Policy"
        />
    <Button
        android:id="@+id/BTCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVPolicy"
        android:text="CREATE ACCOUNT"
        android:textSize="17sp"
        android:background="@drawable/rectangle_button"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        />
    <RelativeLayout
        android:id="@+id/RLOr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BTCreateAccount"
        android:layout_marginTop="24dp"
        >
        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:background="@drawable/horizontal_line"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/TVOr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="17sp"
            />
        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:background="@drawable/horizontal_line"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RLSignUpGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_up_social_button"
        android:layout_below="@id/RLOr"
        android:padding="16dp"
        android:layout_marginTop="24dp">
        <ImageView
            android:id="@+id/IVIconGoogle"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/icon_google"
            android:layout_centerVertical="true"
            android:layout_marginTop="24dp"
            />
        <TextView
            android:id="@+id/TVSignUpGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up with Google"
            android:textSize="17sp"
            android:textColor="#26225F"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RLSignUpFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_up_social_button"
        android:layout_below="@id/RLSignUpGoogle"
        android:layout_marginTop="16dp"
        android:padding="16dp">
        <ImageView
            android:id="@+id/IVIconFacebook"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/icon_facebook"
            android:layout_centerVertical="true"
            android:layout_marginTop="24dp"
            />
        <TextView
            android:id="@+id/TVSignUpFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up with Facebook"
            android:textSize="17sp"
            android:textColor="#26225F"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</RelativeLayout>